server
{
	listen 443 ssl;
	server_name 8bitweekly.xyz;	

	client_max_body_size 50M;

	ssl_certificate /etc/letsencrypt/live/8bitweekly.xyz/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/8bitweekly.xyz/privkey.pem;	

	location /static/
	{
		root /opt/wVote;
	}

	location /
	{
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_redirect off;
		proxy_buffering off;
		proxy_pass http://127.0.0.1:8251;
	}
}

server
{
	listen 80;
	server_name _;
	return 301 https://$host$request_uri;
}
